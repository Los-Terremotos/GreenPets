{
  "extends": "./tsconfig.json", // Reference your main tsconfig.json
  "compilerOptions": {
    "jsx": "react-jsxdev", // If you're using React
    "esModuleInterop": true,
    "types": ["jest", "@testing-library/jest-dom", "@types/jest"],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "./jest.config.js",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
