{
  "compilerOptions": {
    "target": "esnext",  // Adjust the target based on your Node.js version
    "module": "nodenext",
    "outDir": "./dist",
    // "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": [
    "./src/**/*",
    "./server/*",
    "cypress/**/*.ts",
    "./src/datasources/**/*.ts",
    "./src/utils/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]  
}
