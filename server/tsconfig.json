{
  "compilerOptions": {
    "target": "esnext",  // Adjust the target based on your Node.js version
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "apollo-server-core"]
  },
  "include": [
    "./src/**/*",
    "./server/*",
    "cypress/**/*.ts",
    "./src/datasources/**/*.ts",
    "./src/utils/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]  
}
